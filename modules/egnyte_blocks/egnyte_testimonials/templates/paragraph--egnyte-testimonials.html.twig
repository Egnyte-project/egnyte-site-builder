
{% if theme == 'Cards' %}
<div class="mt-750 testimonials">
  <div class="testimonials__bg testimonials__bg--left"></div>
  <div class="testimonials__bg testimonials__bg--right"></div>
    <div class="grid-cont grid-cont--small">
      <h2 class="testimonials__title h2">{{ content.field_egnyte_testimonials__title[0] }}</h2>
      <div class="mt-200 grid-row grid-row--smg grid-row--jcc">
        {% for value in testimonial_cards  %}
          <div class="mt-100 grid-col grid-col--4 grid-col--md-6 grid-col--sm-12">
            <a href="{{ value.link.0.uri }}" class="testimonials__item">
              <h5 class="mt-100 tc--secondary h5">{{ value.header }}</h5>
              <p class="mt-50 p p--small testimonials__text p">{{ value.quote }}</p>
              <div class="testimonials__foot">
                <div class="grid-row grid-row--smg  grid-row--aic">
                  <div class="grid-col grid-col--auto">
                    <img src="{{ value.image }}" width="48" height="48" alt="{{ value.image_alt }}" class="testimonial__photo">
                  </div>
                  <div class="grid-col">
                    <div class="testimonials__name">{{ value.first_name }} {{ value.last_name }}</div>
                    <div class="testimonials__position">{{ value.job_title }} , {{ value.company }}  </div>
                  </div>
                </div>
              </div>
              <div class="more-link testimonials__read">{{ value.link.0.title }}<svg viewBox="0 0 16 16"><polygon fill="currentColor" points="6,13.4 4.6,12 8.6,8 4.6,4 6,2.6 11.4,8"></polygon></svg></div>
            </a>
          </div>
        {% endfor %}
    </div>
  </div>
</div>
{% endif %}

{% if theme == 'Slider' %}
<div class="solution-reviews">
  <div class="grid-cont grid-cont--xl">
    <h2 class="h2">{{ content.field_egnyte_testimonials__title[0] }}</h2>
      <div id="solution-reviews__carousel" class="mt-200 solution-reviews__carousel">
        {% for value in testimonial_cards  %}
        <div class="solution-reviews__slide">

          <div class="solution-reviews__item">
            <img src="/sites/default/files/2020-12/quotes%20%281%29.svg" alt="" class="solution-reviews__quotes">
            <h4 class="mt-150 h3 h3--small">{{ value.header }}</h4>
            <p class="mt-75 p p--large tc--dark">{{ value.quote }}</p>
            <div class="mt-200 grid-row grid-row--smg grid-row--aic">
              <div class="grid-col grid-col--auto">
                <img src="{{ value.image }}"  alt="{{ value.image_alt }}" class="solution-reviews__photo" width="70" height="70" />
              </div>
              <div class="grid-col">
                <div class="p fw--600 tc--dark">{{ value.first_name }} {{ value.last_name }}</div>
                <div class="mt-25 p p--medium fw--500 tc--light">{{ value.job_title }}<br> {{ value.company }}</div>
              </div>
              <div class="grid-col grid-col--auto removed-sm">
                <a href="{{ value.link.0.uri }}" class="more-link more-link--large more-link--enlarged" tabindex="-1">{{ value.link.0.title }}<svg viewBox="0 0 16 16"><polygon fill="currentColor" points="6,13.4 4.6,12 8.6,8 4.6,4 6,2.6 11.4,8"></polygon></svg></a>
              </div>
            </div>
            <div class="removed blocked-sm solution-reviews__foot">
              <a href="{{ value.link.0.uri }}" class="more-link more-link--large more-link--enlarged" tabindex="-1">{{ value.link.0.title }}<svg viewBox="0 0 16 16"><polygon fill="currentColor" points="6,13.4 4.6,12 8.6,8 4.6,4 6,2.6 11.4,8"></polygon></svg></a>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
  </div>
</div>
{% endif %}

